<h3>Edit story: {{story.title}} </h3>

<div class="row">
    <form action="/stories/{{story._id}}?_method=PUT" method="post" class="col s12">
        <input type="hidden" name="_method" value="put">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" value="{{story.title}}">
                <label for="title">Story title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <select name="status" id="status">
                    {{#select story.status}}
                        <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                    {{/select}}
                </select>
                <label for="title">Status</label>
            </div>
            <div class="col s6">
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" id="filled-in-box" name="allowComments"  {{#if story.allowComments}}checked="checked" {{/if}}/>
                        <span>Allow Comments</span>
                    </label>
                </p>
            </div>
            <div class="row"></div>
            <div class="row">
                <div class="input-field">
                    <h5>Edit your story</h5>
                    <textarea name="body" id="" cols="30" rows="20">{{story.body}}</textarea>
                </div>
            </div>
            <input type="submit" value="Save" class="btn">

        </div>
    </form>
</div>