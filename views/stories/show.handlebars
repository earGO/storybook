<div class="row">
    <div class="col s12 m8">
        <h3>{{story.title}}
            <small>{{{editIcon story.user.id user.id story.id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <div class="card-title">{{formatDate story.date 'MMMM Do YYYY'}}</div>
                {{{story.body}}}
            </div>
        </div>
        {{#if story.allowComments}}
            <div class="card">
                <div class="card-content">
                    <span class="card-title">comments</span>
                    {{#if user}}
                        <form action="comments/{{story._id}}" method="post">
                            <div class="input-field">
                                <textarea name="commentBody" id="commentBody" placeholder="Put your comment here" class="materialize-textarea"></textarea>
                                <label for="comentBody">Add comment</label>
                            </div>
                            <input type="submit" value="submit" class="btn">
                        </form>
                    {{else}}
                        <p>Please
                            <a href="/auth/facebook">log in</a>
                            to leave a comment</p>
                    {{/if}}

                </div>
            </div>
            {{# each story.comments}}
                <div class="card">
                    <div class="card-content">
                       <h5>{{commentBody}}</h5>
                        <div class="chip">
                            <img src="{{commentUser.image}}" alt="Story author">
                            <a href="/stories/user/{{commentUser.id}}">{{commentUser.firstName}} {{commentUser.lastName}}</a>
                        </div>
                        <BR>
                        <small>Posted: {{formatDate commentUser.date 'MMMM do YYYY'}}</small>

                    </div>
                </div>
            {{/each}}
        {{/if}}
    </div>
    <div class="col s12 m4">
        <div class="card center-align">

            <div class="card-content">
                <span class="card-title">{{story.user.firstName}} {{story.user.lastName}} </span>
                <img class="circle responsive-img" src="{{story.user.image}}">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user.id}}">More from {{story.user.firstName}}</a>
            </div>
        </div>
    </div>

</div>