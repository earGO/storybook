<h3>Welcome, {{user.firstName}} </h3>
<h4>Here's your stories</h4>
{{#if stories}}

            <table class="striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each stories}}
                        <tr>
                            <td><a href="stories/{{_id}}">{{title}}</a></td>
                            <td>{{formatDate date 'MMMM Do YYYY'}}</td>
                            <td><span class="dash-status">{{status}}</span></td>
                            <td>
                                    <a href="/stories/{{_id}}/edit" class="btn-floating">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                <form action="/stories/{{_id}}?_method=DELETE" method="post" id="delete-form">
                                    <button class="btn red"><i class="fa fa-trash"></i></button>
                                </form>

                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>

{{else}}
    <p>YOu have not created any story</p>
{{/if}}
